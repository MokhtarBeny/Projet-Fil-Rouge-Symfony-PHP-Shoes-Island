{% extends 'base.html.twig' %}

{% block title %}Votre panier s'afficher ci-dessous.{% endblock %}

{% block body %}


 <h1>Panier</h1>

 <table class="table">
        <thead>
            <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantité</th>
            <th>Total</th>
            <th>Action</th>           
            
            </tr>        
        </thead> 
        <tbody>

        {% for pro in panier %}

        <tr>
            <td> {{ pro.nom}} </td>
            <td> {{ pro.prix}} € </td>
            <td> {{ pro.quantite}} </td>
            <td> {{ pro.quantite * pro.prix}} </td>
            <td>
            {# TODO #}
            
            <a href="{{path("app_remove", {id: pro.id})}}" class="btn btn-danger">
            <i class="bi ci-cart-dash">-</i>
            </a>
            <a href="{{path("app_add", {id: pro.id})}}" class="btn btn-success">   
            <i class="bi bi-cart-plus">+</i>    
            </a>
                       
            
            </td>
        </tr>

        {% else %}
            <tr>
                <td colspan="5" class="text-center"> Votre panier est vide. </td>
            </tr>
            
        {% endfor %}
        </tbody>

        <tfoot>
            <tr>
             <td></td>
             <td></td>
             <td></td>
             <td> Total = {{ total }} €</td>
             <td>
             <div>
             <a href="/clear"
            <button type="button" class="btn btn-danger w-50">
            Vider le panier
            </button>
            </a> 
            </div>

            <div>
             <a href="/valid"
            <button type="button" class="btn btn-success w-50">
            Valider la commande
            </button>
            </a> 
            </div>
            
             </td>
            </tr>
        
        </tfoot>

        <tr>
        <td>
        
        </td></tr>
 </table>

<hr>


{% endblock %}
