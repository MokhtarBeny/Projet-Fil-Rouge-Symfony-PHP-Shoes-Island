{% extends 'base.html.twig' %}


{% block title%}
	Nom du produit

{% endblock %}


{% block body %}

<div class="container">
		<div class="text-center mt-4 row">
			<h1>Détails Produit</h1>
			<hr>			
		</div>
</div>
	
<div class="container">
	<div class="card mb-4">
		<h3 class="text-center card-header">{{ produit.Nom }}</h3>
		<div class="card-body">
			<h5 class="text-center card-title">{{produit.Prix}}€</h5>
			<h6 class="card-subtitle text-muted">Collection 2022-2023</h6>
		</div class="col-12 border" >
		<center><img src="/images/{{produit.Imgsrc}}" alt="categorie" class=" img-fluid  imagescategories "></center>
		<div class="card-body">
			<p class="text-center card-text">Voici le descriptif du produit, merci de cliquer ci-dessous afin de l'ajouter à votre panier.</p>
			<a href="/add/{{ produit.id }}" class="btn btn-success">Ajouter au panier</a>
			</a>
		</div>
		<ul class="list-group list-group-flush">
			<li class="list-group-item">{{produit.Description}}</li>
			
		</ul>
		<div class="card-body">
			<a href="#" class="card-link">Card link</a>
			<a href="#" class="card-link">Another link</a>
		</div>
		<div class="card-footer text-muted">
			2 days ago
		</div>
	</div>
</div>


{% endblock %}
